<div class="columns">
    <div class="column is-three-quarters" id="map"></div>
    <div class="column is-narrow is-one-quarter stats">
        <div class="notification has-text-centered" id="countTitle">
            Global Statistics
        </div>
        <div class="notification is-primary">
            <div class="has-text-centered is-size-2" id="countConfirmed">?</div>
            <div class="has-text-centered is-size-6">Positive Tests</div>
        </div>
        <div class="notification is-link">
            <div class="has-text-centered is-size-2" id="countRecovered">?</div>
            <div class="has-text-centered is-size-6">Recovered</div>
        </div>
        <div class="notification is-danger">
            <div class="has-text-centered is-size-2" id="countDeaths">?</div>
            <div class="has-text-centered is-size-6">Deaths</div>
        </div>
        <form id="country_filter">
            <div class="field is-grouped">
                <p class="control">
                    <a class="button" id="run-geolocate">
                        <span class="icon">
                            <i class="fa fa-crosshairs" id="icon-geolocate" aria-hidden="true"></i>
                        </span>
                    </a>
                </p>
                <p class="control is-expanded">
                    <input class="input" id="country_input" type="text" placeholder="Filter by Country" value="">
                </p>
                <p class="control">
                    <a class="button is-info" id="run-search">
                        <span class="icon">
                            <i class="fas fa-search" id="icon-search"></i>
                        </span>
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

